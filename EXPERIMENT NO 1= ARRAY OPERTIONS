 EXPERIMENT NO 1= ARRAY OPERTIONS 
#include <iostream>
using namespace std;

int main() {
    int arr[10] = {10, 20, 30, 40, 50};
    int size = 5;

    // Display (Traversal)
    cout << "Array: ";
    for(int i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;

    // Insertion
    int pos = 2, value = 25;
    for(int i = size; i > pos; i--)
        arr[i] = arr[i - 1];
    arr[pos] = value;
    size++;

    cout << "After Insertion: ";
    for(int i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;

    // Deletion 
    pos = 3;
    for(int i = pos; i < size - 1; i++)
        arr[i] = arr[i + 1];
    size--;

    cout << "After Deletion: ";
    for(int i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;

    // Searching
    int key = 40;
    for(int i = 0; i < size; i++) {
        if(arr[i] == key) {
            cout << "Element found at index " << i << endl;
            break;
        }
    }

    // Updating
    arr[1] = 99;
    cout << "After Updating: ";
    for(int i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;

    // Sorting 
    for(int i = 0; i < size - 1; i++) {
        for(int j = 0; j < size - i - 1; j++) {
            if(arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    cout << "After Sorting: ";
    for(int i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;

    // Reversing
    for(int i = 0; i < size / 2; i++) {
        int temp = arr[i];
        arr[i] = arr[size - i - 1];
        arr[size - i - 1] = temp;
    }

    cout << "After Reversing: ";
    for(int i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;

    return 0;
}
